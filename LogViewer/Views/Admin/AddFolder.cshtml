@model LogFolderConfig
@{
    ViewData["Title"] = "Add Log Folder";
}

<div class="mb-4">
    <h1>Add Log Folder</h1>
    <p>Configure a new log folder to be accessible in the log viewer</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Folder Details</h5>
            </div>
            <div class="card-body">
                <form asp-action="AddFolder" method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Display Name</label>
                        <input type="text" id="name" name="Name" class="form-control" required />
                        <div class="form-text">A friendly name to identify this log folder</div>
                    </div>
                    <div class="mb-3">
                        <label for="path" class="form-label">Folder Path</label>
                        <input type="text" id="path" name="Path" class="form-control" required />
                        <div class="form-text">
                            Can be a relative path (e.g., logs/app1) or an absolute path (e.g., C:\logs\app1)
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Add Folder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 